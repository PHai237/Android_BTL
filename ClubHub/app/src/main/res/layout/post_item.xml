<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_marginBottom="12dp"
    android:elevation="2dp"
    android:padding="10dp">

    <!-- Header post: Avatar CLB, Tên CLB, Avatar user, tên user, nút xóa -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_club"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_club_logo_default"
            android:background="@drawable/bg_circle"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/tv_club_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Badminton"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_user"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_user_avt_default"
                    android:background="@drawable/bg_circle"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jane Cooper"
                    android:textSize="13sp"
                    android:textColor="#444"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- Nội dung post -->
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lovely day to play badminton everyone"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:textSize="15sp"/>

    <!-- Ảnh post -->
    <ImageView
        android:id="@+id/img_post"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/sample_img_default"
        android:scaleType="centerCrop"
        android:layout_marginTop="6dp"
        android:background="@android:color/darker_gray"
        android:contentDescription="Post image"/>

    <!-- Comment -->
    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="Comment"
        android:textSize="15sp"
        android:gravity="center"
        android:background="@android:color/white"
        android:textColor="#000"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp" />
</LinearLayout>
