<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F7F9FC"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back"
        android:background="@android:color/transparent"
        android:contentDescription="Back"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Event Image -->
    <ImageView
        android:id="@+id/img_event_detail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/btn_back" />

    <!-- Event Name -->
    <TextView
        android:id="@+id/tv_event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Year End Party"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/img_event_detail"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Event Date and Time -->
    <TextView
        android:id="@+id/tv_event_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="August 12, 2025 | 7:00 - 9:00 PM"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_event_name"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Event Location -->
    <TextView
        android:id="@+id/tv_event_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Music Hall"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_event_date_time"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Registered Users -->
    <TextView
        android:id="@+id/tv_registered_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="50 of 100 registered"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_event_place"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Club Name -->
    <TextView
        android:id="@+id/tv_club_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name Club"
        android:textSize="14sp"
        android:textColor="#4EFFBF"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_registered_users"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Event Description -->
    <TextView
        android:id="@+id/tv_event_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, id vis virtue accumsamus. Sed nostro salutatus ad, et nobis."
        android:textSize="14sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_club_name"/>

    <!-- Register Button -->
    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Register"
        android:textColor="#000"
        android:backgroundTint="#4EFFBF"
        app:layout_constraintTop_toBottomOf="@id/tv_event_description"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
