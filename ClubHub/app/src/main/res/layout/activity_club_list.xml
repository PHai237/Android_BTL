<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#42FFC6"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="10dp"
        android:baselineAligned="false">

        <TextView
            android:text="CLUB"
            android:textStyle="normal"
            android:textSize="21sp"
            android:textColor="#111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"/>

        <TextView
            android:text="HUB"
            android:textStyle="bold"
            android:textSize="21sp"
            android:textColor="#111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingStart="0dp"/>

        <!-- Đẩy mọi thứ về phải -->
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <!-- Club's Name -->
        <EditText
            android:layout_width="110dp"
            android:layout_height="32dp"
            android:background="#F3FFF3"
            android:hint="Club’s Name"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:textColor="#111"
            android:textColorHint="#B5C4C7"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            android:singleLine="true"/>

        <!-- Spinner Type -->
        <Spinner
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:background="#F3FFF3"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="8dp"/>

        <!-- Add Button -->
        <TextView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="0dp"
            android:background="#FFFFFF"
            android:backgroundTint="@null"
            android:elevation="1dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:letterSpacing="0"
            android:text="+"
            android:textColor="#111"
            android:textSize="21sp"
            android:textStyle="bold" />
    </LinearLayout>


    <!-- Club list -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Club 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="#FFF"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="centerCrop"
                        android:background="@android:color/white"
                        android:layout_marginRight="10dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:text="Football Club"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#111"
                            android:fontFamily="sans-serif"
                            android:layout_marginBottom="3dp"/>

                        <TextView
                            android:text="120 members"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#222"
                            android:layout_marginBottom="0dp"/>

                        <TextView
                            android:text="Short description"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#222"
                            android:layout_marginBottom="9dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:text="Club Details"
                            android:textStyle="bold"
                            android:textColor="#222"
                            android:textSize="15sp"
                            android:background="#FEF681"
                            android:backgroundTint="#FEF681"
                            android:includeFontPadding="false"
                            android:elevation="1dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:fontFamily="sans-serif"
                            android:clipToOutline="false"/>
                    </LinearLayout>
                </LinearLayout>
                <!-- Divider -->
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#222"/>
            </LinearLayout>

            <!-- Club 2 - Copy block trên, thay text -->
            <!-- ...Lặp lại cho các club khác... -->
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#C3FFF2"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu"/>
</LinearLayout>
