<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9FC">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#4EFFBF"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME TO CLUBHUB"
            android:textSize="22sp"
            android:textColor="#000000"
            android:textStyle="normal"
            android:textAllCaps="true"
            android:fontFamily="sans-serif"
            android:gravity="center" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintBottom_toTopOf="@id/btn_explore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Ultimate Club &amp;\nEvent Management Platform"
                android:textColor="#000000"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tv_body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLUBHUB helps you easily manage clubs and events in one place."
                android:textColor="#000000"
                android:textSize="16sp"
                android:textAlignment="viewStart"
                android:layout_marginTop="24dp"
                android:paddingStart="24dp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tv_body3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join activities, connect with others, and stay organized."
                android:textColor="#000000"
                android:textSize="16sp"
                android:textAlignment="viewStart"
                android:layout_marginTop="8dp"
                android:paddingStart="24dp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tv_bullets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="sans-serif"
                android:text="Manage clubs and events effortlessly\n\nExplore clubs and sign up for events\n\nConnect and engage with fellow members\n\nRole-based permissions for better control"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_explore"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="sans-serif"
        android:text="EXPLORE"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_footer"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="#4EFFBF"
        android:text="Start your journey with CLUBHUB today!"
        android:textColor="#000000"
        android:textSize="16sp"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
