<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#42FFC6"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="18dp"
        android:paddingEnd="18dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLUB"
            android:textColor="#111"
            android:textSize="22sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HUB"
            android:textColor="#111"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:paddingStart="2dp"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_edit"
            android:contentDescription="Menu"
            app:tint="#111" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <!-- Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp"
                android:elevation="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="4dp"
                android:backgroundTint="#FFF"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:clipToPadding="false">

                <!-- Top group: avatar, tÃªn, icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Avatar -->
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_circle_avatar"
                        android:contentDescription="Club Logo"
                        android:layout_marginRight="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Football Club"
                            android:textSize="20sp"
                            android:textColor="#111"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120 members"
                            android:textColor="#222"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_edit"
                        android:contentDescription="Edit"
                        android:padding="4dp"
                        android:layout_marginLeft="10dp"
                        app:tint="#111" />
                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Lorem ipsum dolor sit amet, id vis virtute accusamus. Sed nostro salutatus ad, et nobis persius vel, vim errem primis fuisset ex. Ea eum diceret pericula eloquentiam, ad sea"
                    android:textColor="#111"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"/>

                <!-- Admin row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admin"
                        android:textColor="#111"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"/>

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/ic_launcher"
                        android:background="@drawable/bg_circle_avatar"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="Admin Name"
                        android:textColor="#111"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>

                <!-- Members row -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Members"
                    android:textColor="#111"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="7dp"
                        android:src="@mipmap/ic_launcher"
                        android:background="@drawable/bg_circle_avatar"
                        android:scaleType="centerCrop"/>
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="7dp"
                        android:src="@mipmap/ic_launcher"
                        android:background="@drawable/bg_circle_avatar"
                        android:scaleType="centerCrop"/>
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="7dp"
                        android:src="@mipmap/ic_launcher"
                        android:background="@drawable/bg_circle_avatar"
                        android:scaleType="centerCrop"/>
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@mipmap/ic_launcher"
                        android:background="@drawable/bg_circle_avatar"
                        android:scaleType="centerCrop"/>
                </LinearLayout>

                <!-- Upcoming Events -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Upcoming Events"
                    android:textColor="#111"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:orientation="vertical">

                    <!-- Event 1 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp">
                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/bg_circle_dot"
                            android:layout_marginRight="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Event 1"
                            android:textColor="#111"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif"/>
                    </LinearLayout>
                    <!-- Event 2 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/bg_circle_dot"
                            android:layout_marginRight="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Event 2"
                            android:textColor="#111"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Button group Members/Events/Posts -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:text="Members"
                    android:textColor="#222"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/bg_btn_outlined"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:text="Events"
                    android:textColor="#222"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/bg_btn_outlined"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:text="Posts"
                    android:textColor="#222"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@drawable/bg_btn_outlined"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#C3FFF2"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu"/>
</LinearLayout>
