<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.clubhub">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ClubHub"
        tools:targetApi="31">
        <activity
            android:name=".homepage.NewPostActivity"
            android:exported="false" />
        <activity
            android:name=".homepage.HomePage"
            android:exported="true" />
        <activity
            android:name=".introducepage.IntroducePage"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".profile.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".profile.SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".profile.ProfileActivity"
            android:exported="true" />
        <activity
            android:name=".profile.EditProfileActivity"
            android:exported="true" />
        <activity
            android:name=".club.ClubListActivity"
            android:exported="true" />
        <activity
            android:name=".club.CreateClubActivity"
            android:exported="true" />
        <activity
            android:name=".club.ClubDetailActivity"
            android:exported="true" />
        <activity
            android:name=".club.EditClubActivity"
            android:exported="true" />
    </application>

</manifest>